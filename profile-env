#/etc/profile




# set all my env path

# base
export APPBASE_PATH=/home/base

# java
PATH=PATH:$APPBASE_PATH/jdk
export JAVA_HOME=$APPBASE_PATH/jdk
export PATH=$JAVA_HOME/bin:$PATH

# mvn
export PATH=$APPBASE_PATH/apache-maven/bin:$PATH

# gradle
export PATH=$APPBASE_PATH/gradle/bin:$PATH

# node
export PATH=$APPBASE_PATH/node/bin:$PATH
# go
export PATH=$APPBASE_PATH/go/bin:$PATH
# tomcat...













