#/etc/profile

#set java environment

export JAVA_HOME=/opt/java/java-8-sun
export JRE_HOME=/opt/java/java-8-sun/jre
#export CLASSPATH=.:$JAVA_HOME/lib:$JRE_HOME/lib:$CLASSPATH
export PATH=$JAVA_HOME/bin:$JRE_HOME/bin:$PATH

#set apache-tomcat

export CATALINA=/home/xw/fedora/myapp/apache-tomcat-8.0.26
